{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-html"
    ],
    "rules": {
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "theme"
                ]
            }
        ],
        "at-rule-no-deprecated": [
            true,
            {
                "ignoreAtRules": [
                    "apply",
                    "layer"
                ]
            }
        ]
    }
}